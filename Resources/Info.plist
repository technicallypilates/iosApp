<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleDevelopmentRegion</key>
    <string>en</string>
    <key>CFBundleDisplayName</key>
    <string>TechnicallyPilates</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleName</key>
    <string>TechnicallyPilates</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>
    <key>CFBundleVersion</key>
    <string>1</string>

    <!-- Camera -->
    <key>NSCameraUsageDescription</key>
    <string>We need camera access to monitor your Pilates poses.</string>

    <!-- Microphone -->
    <key>NSMicrophoneUsageDescription</key>
    <string>We need microphone access for voice feedback during exercises.</string>

    <!-- Photo Library -->
    <key>NSPhotoLibraryUsageDescription</key>
    <string>We need photo library access to save your exercise progress photos.</string>

    <!-- Calendar -->
    <key>NSCalendarsUsageDescription</key>
    <string>We need access to your calendar to add Pilates workout sessions.</string>

    <!-- Optional: Notifications (not required in plist but some devs include) -->
    <key>NSUserNotificationUsageDescription</key>
    <string>We use notifications to remind you of daily Pilates workouts.</string>

    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>
</dict>
</plist>

